{
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "outDir": "lib",
    "baseUrl": ".",
    "noImplicitThis": false,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strict": true,
    "removeComments": false,
    "pretty": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "paths": {
      "phaser": ["typings/phaser"]
    }
  },
  "include": ["./src/"],
  "filesGlob": ["typings/index.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "types": ["react", "jest"],
  "exclude": ["android", "ios", "build", "node_modules", "typings"],
  "compileOnSave": false
}
